        height: 1000px;
    }

    .table_responsive {
        max-width: 5000px;
        margin: auto;
        overflow: auto;
    }

    .table_container {
        display: flex;
        flex-direction: column;
    }

    table {
        width: 100%;
        font-size: 13px;
        color: #444;
        border-collapse: collapse;
        margin-bottom: 10px;
        font-family:'Oswald';
        font-size:large;
    }

        table > thead {
            background-color: #00bcd4;
            color: #fff;
        }

        table th,
        table td {
            border: 1px solid #00000017;
            padding: 20px; /* Adjusted padding to increase row height */
        }

        table > tbody > tr {
            background-color: #fff;
            transition: 0.3s ease-in-out;
            margin-bottom: 20px; /* Adjusted margin-bottom to create more space between rows */
        }

            table > tbody > tr:nth-child(even) {
                background-color: rgb(238, 238, 238);
            }

            table > tbody > tr:hover {
                filter: drop-shadow(0px 2px 6px #0002);
            }

            table > tbody > tr > td > img {
                display: block;
                width: 60px;
                height: 60px;
                object-fit: cover;
                border-radius: 50%;
                border: 4px solid #fff;
                box-shadow: 0 2px 6px #0003;
            }

    .action_btn {
        display: flex;
        justify-content: center;
        gap: 10px;
    }

        .action_btn > a {
            text-decoration: none;
            color: #444;
            background: #fff;
