@page
@model Railway.Pages.BookingModel
@{
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Car Booking Form</title>
    <link rel="stylesheet" href="button.css"> <!-- Add your custom styling if needed -->

</head>
<body>
    <div class="container1">
        <form method="post">

            <label for="first_name">First Name:</label>
            <input type="text" id="first_name" required asp-for="@Model.empInfo.firstName ">

            <label for="last_name">Last Name:</label>
            <input type="text" id="last_name" required asp-for="@Model.empInfo.lastName">

            <label for="email">Email:</label>
            <input type="" id="email" required asp-for="@Model.empInfo.Email">






            <label for="phone">Phone Number:</label>
            <input type="tel" id="phone" asp-for="@Model.empInfo.PhoneNumber">

            <label for="dcity">Departure City:</label>
            <input type="tel" id="dcity" asp-for="@Model.empInfo.DepartureCity">

            <label for="acity">Arrival City:</label>
            <input type="tel" id="acity" required asp-for="@Model.empInfo.ArrivalCity">

            <label>Pick-up Date and Time:</label>
            <input type="tel" asp-for="@Model.empInfo.bookingDate">

            <label for="ticket_type">Ticket Type:</label>
            <select id="ticket_type" required asp-for="@Model.empInfo.TicketType">
                <option value="standard">Standard</option>
                <option value="premium">Premium</option>
                <option value="deluxe">Deluxe</option>
            </select>
            <a class="button" href="/payment">
                <p>Book Now!</p>
            </a>




        </form>
    </div>
</body>
</html>
