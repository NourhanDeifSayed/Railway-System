<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Railway</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.2/css/all.min.css" integrity="sha384-pzjw8/YEzbL4RSK1Qx5syySrqLMp9On6NvfBpbc1TGeh5I5LsOa9aP9ZgFf5thdF" crossorigin="anonymous">

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Railway.styles.css" asp-append-version="true" />


</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light navbar-custom border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-page="/Index">
                    <img src="images/train_logo.jpg" alt="Logo"> RAILWAY
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1 d-flex justify-content-between">

                       
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/Booking">BOOKING</a>
                        </li>
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item">
                                <a class="nav-link" href="/Profile">Profile</a>
                            </li>
                        }
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/login">LOGIN</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/discover">DISCOVER</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/Maneger">MANAGEMENT</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/lost_found">LOST & FOUND </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/complaint">COMPLAINT </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/help">HELP </a>
                        </li>
 


                    </ul>
                </div>
            </div>
        </nav>
        <div class="font-modify">
            <!-- Your content here -->
        </div>
    </header>


    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
 

    <!-- ... (previous code) ... -->





   

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
<!-- ... (footer style) ... -->
<style>
    /* ... (existing styles) ... */
    footer {
        background-color: #3498db; /* Single color background */
        color: #fff;
        text-align: center;
        padding: 5px; /* Further reduced padding for a shorter footer */
        position: absolute;
        bottom: 0;
        width: 100%;
    }

        footer a {
            color: #fff;
            text-decoration: from-font;
            transition: color 0.3s ease; /* Smooth color transition on hover */
        }

            footer a:hover {
                color: #ecf0f1; /* Change color on hover */
            }

        footer .container {
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        footer .contact-info {
            font-size: 14px;
            font-style: oblique
        }

    /* ... (any additional styles you want to add) ... */
</style>

<!-- ... (vavbar style) ... -->

<style>
    /* Custom styles for the logo in the navigation bar */
    .navbar-brand img {
        width: 40px !important;
        height: 40px !important;
        border-radius: 50% !important;
        margin-right: 10px !important;
    }

    /* Custom styles for the colorful navigation bar */
    .navbar-custom {
        background-color: #3498db !important;
        border-bottom: 2px solid #2980b9 !important;
    }

        .navbar-custom .navbar-brand,
        .navbar-custom .navbar-nav .nav-link {
            color: #fff !important;
            font-family: 'Comic Sans MS', sans-serif;
        }

        .navbar-custom .navbar-toggler-icon {
            background-color: #fff !important;
        }

        .navbar-custom .navbar-toggler:hover,
        .navbar-custom .navbar-toggler:focus {
            background-color: #2980b9 !important;
        }

        .navbar-custom .navbar-nav .nav-link:hover,
        .navbar-custom .navbar-nav .nav-link:focus {
            background-color: #2980b9 !important;
        }

    /* Custom styles for the footer */

</style>