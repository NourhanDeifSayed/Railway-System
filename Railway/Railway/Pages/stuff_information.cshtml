@page
@model stuff_informationModel
@{
}


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Your Title Here</title>

 
   
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;500&display=swap" rel="stylesheet">
     
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.2/css/all.min.css" integrity="sha384-pzjw8/YEzbL4RSK1Qx5syySrqLMp9On6NvfBpbc1TGeh5I5LsOa9aP9ZgFf5thdF" crossorigin="anonymous">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Railway.styles.css" asp-append-version="true" />

 
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
</head>
<body>
    <div class="table_responsive">
        <div class="table_container">
            <table>
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Name</th>
                        <th>Addres</th>
                        <th>Phone Number</th>
                        <th>Role</th>
                        <th>What to do!</th>
                        
                        
                    </tr>
                </thead>
                <tbody>
                    @foreach (var emp in Model.ListEMP)
                    {
                        <tr>
                            <td>@emp.StaffID</td>
                            <td>@emp.StaffName</td>
                            <td>@emp.StaffAddress</td>
                            <td>@emp.StaffPhone</td>
                            <td>@emp.StaffRole</td>
                            <td>
                                <a class="btn btn-primary btn-sm" href="/Edit?StaffID=@emp.StaffID">Edit</a>
                                <a class="btn btn-danger btn-sm" href="/Delete?StaffID=@emp.StaffID">Delete</a>

                                <a class="btn btn-outline-success btn-sm" href="/Display?StaffID=@emp.StaffID">Display</a>

                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>


    <a class="btn btn-primary btn-sm" href="/AddStuff">Add new Employee</a>
</body>
</html>
<style>
    /*table css*/
    * {
        box-sizing: border-box;
    }

    body {
        margin: 0;
        scroll-margin-bottom: 300px;
        height: 1000px;
    }

    .table_responsive {
        max-width: 5000px;
        margin: auto;
        overflow: auto;
    }

    .table_container {
        display: flex;
        flex-direction: column;
    }

    table {
        width: 100%;
        font-size: 13px;
        color: #444;
        border-collapse: collapse;
        margin-bottom: 10px;
        font-family:'Oswald';
        font-size:large;
    }

        table > thead {
            background-color: #00bcd4;
            color: #fff;
        }

        table th,
        table td {
            border: 1px solid #00000017;
            padding: 20px; /* Adjusted padding to increase row height */
        }

        table > tbody > tr {
            background-color: #fff;
            transition: 0.3s ease-in-out;
            margin-bottom: 20px; /* Adjusted margin-bottom to create more space between rows */
        }

            table > tbody > tr:nth-child(even) {
                background-color: rgb(238, 238, 238);
            }

            table > tbody > tr:hover {
                filter: drop-shadow(0px 2px 6px #0002);
            }

            table > tbody > tr > td > img {
                display: block;
                width: 60px;
                height: 60px;
                object-fit: cover;
                border-radius: 50%;
                border: 4px solid #fff;
                box-shadow: 0 2px 6px #0003;
            }

    .action_btn {
        display: flex;
        justify-content: center;
        gap: 10px;
    }

        .action_btn > a {
            text-decoration: none;
            color: #444;
            background: #fff;
            border: 1px solid;
            display: inline-block;
            padding: 7px 20px;
            font-weight: bold;
            border-radius: 3px;
            transition: 0.3s ease-in-out;
            font-family:'Comic Sans MS'
        }

            .action_btn > a:nth-child(1) {
                border-color: #26a69a;
            }

            .action_btn > a:nth-child(2) {
                border-color: orange;
            }

            .action_btn > a:hover {
                box-shadow: 0 3px 8px #0003;
            }
</style>
<!--back botton css-->
<style>
    button {
        display: flex;
        height: 3em;
        width: 100px;
        align-items: center;
        justify-content: center;
        background-color: #eeeeee4b;
        border-radius: 3px;
        letter-spacing: 1px;
        transition: all 0.2s linear;
        cursor: pointer;
        border: none;
        background-color: lightgray;
    }

        button > svg {
            margin-right: 5px;
            margin-left: 5px;
            font-size: 20px;
            transition: all 0.4s ease-in;
        }

        button:hover > svg {
            font-size: 1.2em;
            transform: translateX(-5px);
        }

        button:hover {
            box-shadow: 9px 9px 33px #d1d1d1, -9px -9px 33px #ffffff;
            transform: translateY(-2px);
        }</style>

